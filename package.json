{
  "name": "create-new-page",
  "displayName": "create-new-page",
  "description": "",
  "version": "0.0.2",
  "publisher": "stu-tsuba",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "create-new-page.create",
        "title": "Create New Html Page."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "create-new-page.create",
          "when": "explorerResourceIsFolder",
          "group": "navigation@999"
        }
      ]
    },
    "configuration": {
      "type":"object",
      "title":"拡張機能の設定",
      "properties": {
        "create-new-page.filePaths":{
          "type":"array",
          "default":["css/style.css","js/script.js"],
          "description": "作成するファイル",
          "items":{
            "type":"string"
          },
          "scope":"application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "vsce package",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
